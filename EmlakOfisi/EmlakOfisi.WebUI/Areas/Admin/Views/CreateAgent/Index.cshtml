
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model EmlakOfisi.WebUI.Models.AgentModel
    <div class="container" style="margin-top:12%">
        <div class="alert-danger text-white">@ViewData["ErrorMessage"]</div>
        <div class="row justify-content-center" >
            <div class="kayit col-5 border"  style="background-color:rgba(255, 255, 255, 0.5); border-radius:15px; box-shadow:5px 5px 5px;">
                @using (Html.BeginForm("Index", "CreateAgent", FormMethod.Post))
                {
                    <div>
                        <input type="hidden" name="password" value="123456" />
                        <input type="hidden" name="ConfirmPassword" value="123456" />
                    </div>
                    <div class="form-group p-2">
                        <label>Şirket İsmi:</label>
                        @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", placeholder = "Şirket ismi giriniz.." })
                        @Html.ValidationMessageFor(m => m.CompanyName)
                    </div>
                    <div class="form-group p-2">
                        <label>Kullanıcı Adı:</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı adı giriniz.." })
                        @Html.ValidationMessageFor(m => m.Username)
                    </div>

                    <div class="form-inline justify-content-between mb-1">
                        <a class="btn btn-warning" href="/Admin/Home">Geri Dön</a>
                        <button type="submit" class="btn btn-success">Tamamla</button>
                    </div>

                }
            </div>
        </div>

    </div>

