
@{
    ViewData["Title"] = "Create";
}


@model EmlakOfisi.WebUI.Models.AdvertisementModel
<div class="container" style="margin-top:12%">

<div class="row justify-content-center">
    <div class="kayit col-5 border" style="background-color:rgba(255, 255, 255, 0.5); border-radius:15px; box-shadow:5px 5px 5px;">
        @using (Html.BeginForm("Create", "Advertisement", FormMethod.Post))
        {
            <div  style="text-align:center; font-size:x-large; border-radius:15px; color:white; background-color:rgba(235, 20, 20, 0.75)">@ViewData["ErrorMessage"]</div>
            <div class="form-group  p-2">
                <label>İlan Başlığı:</label>
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "İlan başlığı giriniz.." })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
            <div class="form-group p-2">
                <label>Oda Sayısı:</label>
                @Html.TextBoxFor(m => m.NumberOfRoom, new { @class = "form-control", placeholder = "Oda sayısı giriniz.." })
                @Html.ValidationMessageFor(m => m.NumberOfRoom)
            </div>
            <div class="form-group  p-2">
                <label>Konut Yaşı:</label>
                @Html.TextBoxFor(m => m.AgeOfHouse, new { @class = "form-control", placeholder = "Konut yaşını giriniz.." })
                @Html.ValidationMessageFor(m => m.AgeOfHouse)
            </div>
            <div class="form-group  p-2">
                <label>Metre Kare:</label>
                @Html.TextBoxFor(m => m.SquareMeter, new { @class = "form-control", placeholder = "Metre kare büyüklüğü giriniz.." })
                @Html.ValidationMessageFor(m => m.SquareMeter)
            </div>

            <div class="form-inline justify-content-between mb-1">
                <a class="btn btn-warning" href="/Home/Index">Geri Dön</a>
                <button type="submit" class="btn btn-success">Tamamla</button>
            </div>

        }
    </div>
</div>

</div>
