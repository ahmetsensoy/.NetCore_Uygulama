
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EmlakOfisi.WebUI.Models.AgentModel

    <div class="container" style="margin-top:12%;">
        
        <div class="row justify-content-center">

            <div class="kayit col-5 border" style="background-color:rgba(255, 255, 255, 0.5); border-radius:15px; box-shadow:5px 5px 5px;">
              
                @using (Html.BeginForm("Update", "Account", FormMethod.Post))
                {
                    <div style="text-align:center; font-size:x-large; border-radius:15px; color:white; background-color:rgba(235, 20, 20, 0.75)">@ViewData["ErrorMessage"]</div>
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="hidden" name="username" value="@Model.Username" />
                    <input type="hidden" name="companyName" value="@Model.CompanyName" />
                    <div class="form-group p-2">
                        <label>Şifreniz:</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi giriniz.." })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group p-2">
                        <label>Şifre Onay:</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Tekrar şifrenizi giriniz.." })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                    <div class="form-inline justify-content-between mb-1">
                        <a class="btn btn-warning" href="/Home/Index">Geri Dön</a>
                        <button type="submit" class="btn btn-success">Tamamla</button>
                    </div>

                }
            </div>
        </div>

    </div>

